    }
    .imageWrapperHero img {
        width: 100%;
        height: 100%;
        border-radius: 12px;
    }
    .image-area {
        position: absolute;
        left: 0;
        top: 0;
    }
    .toprow {
        fill: #75A93A;
        fill-opacity: 0.3;
        cursor: pointer;
        stroke: white;
        stroke-width: .2;
    }
    .secondrow {
