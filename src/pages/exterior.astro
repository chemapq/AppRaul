    }
    .secondrow:hover {
        fill-opacity: 0.8;
    }
    .modal-ficha {
    }
    dialog {
        height: calc(100vh - 16px);
        border: none;
    }
    dialog::backdrop {
        background-color: #26263399;
    }
    .modalImage {
        height: 99%;
        margin: 0px;
        border: none;
    }
    .outline {
        fill: none;
        stroke: white;
        stroke-width: .2;
    }
    .section-mobile {
        display: none;
    }
    .fichaMovil {
        height: fit-content;
        width: fit-content;
    }
    .fichaMovil img {
        width: 90vw;
        aspect-ratio: 2481 / 3509;
        height: auto;
    }
    .mobile-ul {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }
	.mobile-ul li {
		padding-block: 8px;
	}
    .closeButton {
        position: fixed;
        top: 8px;
        right: 8px;
        height: 48px;
        width: 48px;
        outline: none;
        background-color: hsl(240, 15%, 27%);
        color: hsl(240, 15%, 97%);
        cursor: pointer;
        font-size: 16pt;
        border: 2px hsl(240, 15%, 27%) solid;
        border-radius: 250px;
        text-align: center;
        padding: 0;
    }
    .detalle-par {
        background-color: hsl(240, 15%, 37%);
    }
    /* CSS Móvil */
    @media (orientation: portrait) {
        .section-pc {
            display: none;
        }
        .section-mobile {
            display: flex;
			justify-content: flex-start;
            flex-direction: column;
			height: 100%;
			margin-block: 0;
        }
        main {
            height: calc(100dvh - 80px);
            overflow-y: hidden;
			overflow-x: hidden;
        }
        .mobile-text {
