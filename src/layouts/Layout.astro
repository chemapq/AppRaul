    --text: #0c0907;
--background: #d4c9c4;
--primary: #c0aea5;
--secondary: #ab9387;
--accent: #f47f49;




    overflow: visible;
}

html {
    background-color: var(--background);
    font-family: "Poppins", sans-serif;
    font-weight: 400;
    font-style: normal;
}

main {
    margin: 0;
    padding: 0;
    width: 100%;
    background-color: var(--background);
}

code {
    font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
}

body {
    display: flex;
    flex-direction: row;
    height: 100vh;
    margin: 0;
    padding: 0;
    background-color: var(--background);
}

.fixed-navbar {
    color: var(--text);
    width: 18vw;
    padding-left: 8px;
    min-width: fit-content;
    display: flex;
    flex-direction: column;
    padding-top: 8px;
    align-items: center;
    font-size: 1rem;
    border-right: hsla(228, 100%, 99%, 0.1) solid 0px;
    height: 100dvh;
    align-items: flex-start;
    gap: 8px;
}

.navlink {
    display: flex;
    color: var(--text);
    text-decoration: none;
    padding: 1.4dvh;
    border-radius: 12px;
    align-items: center;
}

.navlink svg {
    padding-right: 8px;
}

.hamburger-link {
    display: flex;
    color: var(--text);
    text-decoration: none;
    padding: 4px;
    border-radius: 12px;
    align-items: center;
}

.hamburger-link svg {
    padding-right: 8px;
}

.icon-list {
    margin: 0;
    padding: 0;
    list-style-type: none;
    display: flex;
    flex-direction: column;
    gap: 2dvh;
    max-width: 250px;
    width: 18vw;
    min-width: fit-content;
    overflow-y: auto;
}

.icon-list {
    padding-bottom: 1dvh;
}

.logo {
    font-size: 2rem;
    color: var(--secondary);
    text-decoration: none;
    padding-left: 8px;
}

.logo span {
    color: var(--accent);
}

.navlink:hover {
    outline-offset: -1px;
    outline: solid 1px var(--primary);
}

.active {
    background-color: var(--primary);
    color: var(--text);
    font-weight: 500;
}

.active svg {
    fill: var(--text);
}

.poppins-bold {
    font-family: "Poppins", sans-serif;
    font-weight: 700;
    font-style: normal;
}

.poppins-regular {
    font-family: "Poppins", sans-serif;
    font-weight: 400;
    font-style: normal;
}
.hamburger-icon {
    fill: var(--primary);
    display: none;
}

.hamburger-icons {
    list-style-type: none;
    padding-left: 8px;
    display: flex;
    flex-direction: column;
    gap: 24px;
}

.hamburger-dialog {
    height: 0px;
    top: 80px;
    width: 100vw;
    position: absolute;
    z-index: 99;
    background-color: var(--background);
    display: none;
}

.hamburger-list {
    font-size: 1.5rem;
}
.filter-text {
    text-decoration: none;
    display: flex;
    flex-direction: column;
    gap: 6px;
    font-size: 0.8rem;
    color: var(--text);
    margin-left: 16px;
    margin-right: 16px;
    list-style: none;
    padding: 0;
}

.filter-text li {
    white-space: nowrap;
}
.filter-negrita {
    font-weight: bold;
}

.closeButton {
    position: absolute;
    top: 8px;
    right: 8px;
    background: none;
    border: none;
    color: hsl(240, 15%, 97%);
    font-size: 1.5rem;
    cursor: pointer;
}

.fixed-navbar::before {
  align-self: stretch;
  content: '';
  border: 1px solid var(--secondary);
}
.fixed-navbar .logo {
  order: -2;
}
.fixed-navbar .filter-text {
    order: -1;
}

@media (orientation: portrait) {
    .fixed-navbar::before {
         border: none;
}
    body {
        flex-direction: column;
        overflow: hidden;
    }

    .fixed-navbar {
        height: 80px;
        flex-direction: row;
        width: 100vw;
        align-items: center;
        padding: 0;
        border-bottom: solid 1px var(--primary);
        justify-content: space-between;
        flex-grow: 0;
        gap: 0px;
    }

    .icon-list {
        display: none;
    }

    .hamburger-icon {
        display: initial;
        padding-right: 16px;
        height: 32px;
        transition: 0.4s;
    }

    .hamburger-icon-rotated {
        transform: rotate(90deg) translateX(7px) translateY(8px);
        transition: 0.4s;
    }

    .logo {
        padding-left: 16px;
    }

    .hamburger-open {
        height: calc(100vh - 80px);
        display: flex;
    }
    .filter-text {
        display: none;
    }
}

@media (max-width: 1200px) {
    .long-nav {
        display: none;
    }
}
</style>
<script type="module">
const hamburgerMenu = document.querySelector(".hamburger-dialog")
const hamburgerIcon = document.querySelector(".hamburger-icon")

hamburgerIcon.addEventListener("click",()=>{
	if (hamburgerMenu.classList.contains("hamburger-open")){
		hamburgerMenu.classList.remove("hamburger-open")
		hamburgerIcon.classList.remove("hamburger-icon-rotated")

	}
	else{
		hamburgerMenu.classList.add("hamburger-open")
		hamburgerIcon.classList.add("hamburger-icon-rotated")
	}
})
</script>